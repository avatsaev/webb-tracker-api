{
    "root": true,

    "plugins": ["unused-imports"],
    "overrides": [
        {
            "files": ["*.ts"],

            "rules": {
                "@typescript-eslint/no-unused-vars": [
                    "warn",
                    {
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_"
                    }
                ],
                "unused-imports/no-unused-imports": "error"
            }
        }
    ]
}
